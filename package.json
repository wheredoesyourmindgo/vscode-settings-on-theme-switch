{
  "name": "vscode-settings-on-theme-switch",
  "displayName": "VSCode Settings on Theme Switch",
  "description": "Automatically change settings based on the active theme.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "settingsOnThemeSwitch.preferredDarkColorThemeSettings": {
          "type": "object",
          "default": {},
          "description": "Settings to apply when a dark theme is active."
        },
        "settingsOnThemeSwitch.preferredLightColorThemeSettings": {
          "type": "object",
          "default": {},
          "description": "Settings to apply when a light theme is active."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.29.0",
    "glob": "^7.1.6",
    "mocha": "^8.3.2",
    "typescript": "^4.3.5",
    "vscode-test": "^1.5.0"
  }
}
